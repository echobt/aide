#!/bin/bash
set -e

# Skip hooks if SKIP_GIT_HOOKS is set
if [ "${SKIP_GIT_HOOKS:-0}" = "1" ]; then
  echo "‚è≠Ô∏è  Skipping pre-commit hook (SKIP_GIT_HOOKS=1)"
  exit 0
fi

echo "üîç Running pre-commit checks..."

# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
# Rust formatting check
# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
if command -v cargo >/dev/null 2>&1; then
  echo "  ‚ñ∏ Checking Rust formatting..."
  (cd src-tauri && cargo +nightly fmt --all -- --check 2>/dev/null) || {
    echo "‚ùå Rust formatting check failed. Run: cd src-tauri && cargo +nightly fmt --all"
    exit 1
  }
  echo "  ‚úÖ Rust formatting OK"
else
  echo "  ‚ö†Ô∏è  cargo not found, skipping Rust format check"
fi

# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
# TypeScript type checking
# ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
if command -v npx >/dev/null 2>&1 && [ -f "tsconfig.json" ]; then
  echo "  ‚ñ∏ Checking TypeScript types..."
  npm run typecheck || {
    echo "‚ùå TypeScript type check failed. Run: npm run typecheck"
    exit 1
  }
  echo "  ‚úÖ TypeScript types OK"
else
  echo "  ‚ö†Ô∏è  npx not found or no tsconfig.json, skipping TypeScript check"
fi

echo "‚úÖ Pre-commit checks passed!"
