{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for Cortex Desktop - Security hardened",
  "windows": ["main", "main-*"],
  "permissions": [
    "core:default",
    "core:event:allow-listen",
    "core:event:allow-unlisten",
    "core:event:allow-emit",
    "core:event:allow-emit-to",
    "core:webview:allow-create-webview-window",
    "core:webview:allow-create-webview",
    "core:webview:allow-set-webview-position",
    "core:webview:allow-set-webview-size",
    "core:webview:allow-webview-close",
    "core:webview:allow-set-webview-focus",
    "core:webview:allow-print",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "core:window:allow-maximize",
    "core:window:allow-toggle-maximize",
    "core:window:allow-unmaximize",
    "core:window:allow-start-dragging",
    "core:window:allow-start-resize-dragging",
    "core:window:allow-is-maximized",
    "core:window:allow-set-focus",
    "core:window:allow-set-title",
    "core:window:allow-set-size",
    "core:window:allow-set-position",
    "core:window:allow-set-fullscreen",
    "core:window:allow-is-fullscreen",
    "shell:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "git", "cmd": "git", "args": true },
        { "name": "node", "cmd": "node", "args": true },
        { "name": "npm", "cmd": "npm", "args": true },
        { "name": "npx", "cmd": "npx", "args": true },
        { "name": "cargo", "cmd": "cargo", "args": true },
        { "name": "python", "cmd": "python", "args": true },
        { "name": "python3", "cmd": "python3", "args": true }
      ]
    },
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:allow-read-text",
    "process:allow-restart",
    "process:allow-exit",
    "os:allow-locale",
    "os:allow-platform",
    "os:allow-version",
    "os:allow-os-type",
    "os:allow-arch",
    "deep-link:default"
  ]
}
